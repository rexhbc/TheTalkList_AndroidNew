<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Hi, I'm"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/expandedToolbartutorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Denial"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="!"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.3"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/TutorImg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:layout_weight="1.2"
                                android:adjustViewBounds="true"
                                android:background="@drawable/circle"
                                android:scaleType="fitCenter"
                                android:src="@drawable/user2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1">

                                    <RatingBar
                                        android:id="@+id/ratingBar"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:clickable="false"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:isIndicator="true"
                                        android:maxHeight="20dp"
                                        android:minHeight="5dp"
                                        android:numStars="5"
                                        android:progressTint="@color/yellow" />
                                    <!--style="@style/customRatingBar"-->

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp">


                                    <TextView
                                        android:id="@+id/availableTutorListCPS"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="3dp"
                                        android:text="0.00"
                                        android:textColor="#85929E"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Credits/Min"
                                        android:textColor="#85929E"
                                        android:textSize="12dp" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <ImageButton

                                    android:id="@+id/imageButton3"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:background="#00000000"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/message" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <ImageButton
                                    android:id="@+id/imageButton6"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:background="#00000000"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/video" />


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#90A4AE" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">


                                <!--<TextView-->
                                <me.grantland.widget.AutofitTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Tutoring Subjects"
                                    android:textColor="#616A6B"
                                    android:textSize="20sp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <WebView
                                        android:id="@+id/TutorExpanded_tutorin_languages_webview"
                                        android:layout_width="match_parent"
                                        android:layout_below="@+id/textView9"
                                        android:layout_marginLeft="-3dp"
                                        android:layout_gravity="fill_vertical"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="start"
                                        android:visibility="gone"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/TutorExpanded_tutorin_languages"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:text="" />


                                    <ProgressBar
                                        android:id="@+id/TutorExpanded_tutorin_languages_progress"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="vertical">

                                </LinearLayout>


                                <!--<TextView-->
                                <me.grantland.widget.AutofitTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#616A6B"
                                    android:textSize="20sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#616A6B" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="Video Greeting"
                                        android:textColor="#616A6B"
                                        android:textSize="20dp" />

                                    <ImageView
                                        android:id="@+id/expanded_fullscreen"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_alignParentRight="true"
                                        android:src="@mipmap/ic_full_screen"
                                        android:textAlignment="viewEnd" />
                                </RelativeLayout>

                                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                                    android:id="@+id/exo_player_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:orientation="vertical">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="#616A6B" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="vertical">


                                        <!--<TextView-->
                                        <me.grantland.widget.AutofitTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="Personal"
                                            android:textColor="#616A6B"
                                            android:textSize="20sp" />

                                        <!--<at.blogc.android.views.Expandableme.grantland.widget.AutofitTextView-->
                                        <at.blogc.android.views.ExpandableTextView
                                            android:id="@+id/TutorExpanded_personal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="3"
                                            android:text="@string/personal"
                                            android:textColor="#616A6B"
                                            android:textSize="12sp"
                                            app:animation_duration="1000" />


                                        <com.elyeproj.loaderviewlibrary.LoaderTextView
                                            android:id="@+id/TutorExpanded_personal_alter"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:visibility="gone" />


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:weightSum="3">

                                            <View
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="2" />

                                            <Button
                                                android:id="@+id/more"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="#00000000"
                                                android:text="more..."
                                                android:textColor="#03A9F4"
                                                android:textSize="12sp" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="#616A6B" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <!--<TextView-->
                                        <me.grantland.widget.AutofitTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-3dp"
                                            android:text="Educational"
                                            android:textColor="#616A6B"
                                            android:textSize="20sp" />

                                        <at.blogc.android.views.ExpandableTextView
                                            android:id="@+id/TutorExpanded_educational"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="3"
                                            android:text="@string/personal"
                                            android:textColor="#616A6B"
                                            android:textSize="12sp"
                                            app:animation_duration="1000" />

                                        <com.elyeproj.loaderviewlibrary.LoaderTextView
                                            android:id="@+id/TutorExpanded_educational_alter"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:visibility="gone" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:weightSum="3">

                                            <View
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="2" />

                                            <Button
                                                android:id="@+id/moreedu"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="#00000000"
                                                android:text="more..."
                                                android:textColor="#03A9F4"
                                                android:textSize="12sp" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="#78909C" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <!--<TextView-->
                                        <me.grantland.widget.AutofitTextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="Professional"
                                            android:textColor="#616A6B"
                                            android:textSize="20sp" />

                                        <at.blogc.android.views.ExpandableTextView
                                            android:id="@+id/TutorExpanded_professional"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="3"
                                            android:text="@string/personal"
                                            android:textColor="#616A6B"
                                            android:textSize="12sp"
                                            app:animation_duration="1000" />

                                        <com.elyeproj.loaderviewlibrary.LoaderTextView
                                            android:id="@+id/TutorExpanded_professional_alter"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:visibility="gone" />


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:weightSum="3">

                                            <View
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="2" />

                                            <Button
                                                android:id="@+id/moreprof"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="#00000000"
                                                android:text="more..."
                                                android:textColor="#03A9F4"
                                                android:textSize="12sp" />
                                        </LinearLayout>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="#616A6B" />

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center"
                                            android:weightSum="4">

                                            <me.grantland.widget.AutofitTextView

                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Ratings"

                                                android:textColor="#616A6B"
                                                android:textSize="20sp" />


                                            <LinearLayout
                                                android:layout_marginTop="3dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_weight="3.5"
                                                android:gravity="center">


                                                <!--<TextView-->
                                                <me.grantland.widget.AutofitTextView
                                                    android:id="@+id/autofitTextView"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:text="Sessions: "
                                                    android:textAlignment="viewEnd"
                                                    android:textColor="#616A6B"
                                                    android:textSize="13sp" />

                                                <me.grantland.widget.AutofitTextView
                                                    android:id="@+id/TutorExpanded_review_count"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="10"
                                                    android:textAlignment="viewStart"
                                                    android:textColor="#616A6B"
                                                    android:textSize="13sp" />

                                            </LinearLayout>



                                            <ImageView
                                                android:id="@+id/TutorExpanded_review_minus"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                android:layout_gravity="center"
                                                android:layout_weight="1"
                                                android:src="@drawable/minus"
                                                android:visibility="gone" />


                                            <LinearLayout
                                                android:layout_marginTop="2dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="25dp"
                                                android:layout_alignParentRight="true"
                                                android:gravity="center">


                                                <RatingBar
                                                    android:id="@+id/TutorExpanded_review_ratingBar1"
                                                    style="?android:attr/ratingBarStyleSmall"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="5dp"
                                                    android:clickable="false"
                                                    android:focusable="false"
                                                    android:layout_marginTop="3dp"
                                                    android:layout_gravity="center"
                                                    android:focusableInTouchMode="false"
                                                    android:isIndicator="true"
                                                    android:maxHeight="20dp"
                                                    android:minHeight="5dp"
                                                    android:numStars="5"
                                                    android:progressTint="@color/yellow" />
                                            </LinearLayout>
                                        </LinearLayout>

                                    </RelativeLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="24dp"
                                    android:weightSum="3">

                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2" />

                                    <Button
                                        android:id="@+id/moreList"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="#00000000"
                                        android:text="more..."
                                        android:textColor="#03A9F4"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/review_root_expanded"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>